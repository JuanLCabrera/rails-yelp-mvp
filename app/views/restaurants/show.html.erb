<div class="w3-container bg-dark text-white">
<h2><%= @restaurant.name %></h2>
</div>

<div class="myDiv w3-container">
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
</div>


<h4 class="text-white"><%= link_to 'Back', restaurants_path %></h4>
<h4 class="text-white"><%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %></h4>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

